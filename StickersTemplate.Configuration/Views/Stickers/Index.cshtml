@model IEnumerable<StickersTemplate.Configuration.Models.StickerViewModel>


<!-- <h3>Stickers</h3> -->

<p>
    @Html.ActionLink("Generate", "Generate", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Upload", "Create", null, new { @class = "btn btn-default" })
    <button id="btnPublish" class="btn btn-default">Publish to Teams</button>
    <div id="divPublishMessage"></div>
</p>

<table class="table">
    <tr>
        <th style="width: 100px;"></th>
        <th style="width: 200px;">
            @Html.DisplayNameFor(m => m.ImageUri)
        </th>
        <th style="width: 200px;">
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Keywords)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.UserId)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
            <td>
                <img src="@item.ImageUri" width="110" />
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Keywords
            </td>
            <td>
                @item.ModelName
            </td>
            <td>
                @item.UserId
            </td>
        </tr>
    }
</table>

<script type="text/javascript">
    function gettoken() {
        var token = '@Html.AntiForgeryToken()';
        token = $(token).val();
        return token;
    }

    $(document).ready(function () {
        $("#btnPublish").click(function () {
            $("#divPublishMessage").text("");
            $.ajax({
                type: "POST",
                url: "@Url.Action("Publish")",
                data: {
                    __RequestVerificationToken: gettoken(),
                },
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                success: function () {
                    $("#divPublishMessage")
                        .text("The messaging extension configuration was successfully updated.")
                        .removeClass("text-danger")
                        .addClass("text-success");
                },
                error: function () {
                    $("#divPublishMessage")
                        .text("There was an error updating the messaging extension.")
                        .addClass("text-danger")
                        .removeClass("text-success");
                }
            });
        });
    });
</script>